commands:
  01_install_library:
    command: "yum -y install gcc-c++ libpng-devel libjpeg-devel libtiff-devel wget"
  02_install_graphicsmagick:
    command: "/tmp/install_graphicsmagick.sh"
files:
  "/tmp/install_graphicsmagick.sh":
    mode: "000755"
    content : |
      #!/bin/bash

      wget https://sonik.dl.sourceforge.net/project/graphicsmagick/graphicsmagick/1.3.38/GraphicsMagick-1.3.38.tar.xz
      tar zxvf GraphicsMagick-1.3.38.tar.xz
      cd GraphicsMagick-1.3.38
      ./configure --with-tcl=/usr/lib/tcl8.4/ --with-tk=/usr/lib/tk8.4/ --with-magick=/usr/local/bin/GraphicsMagickWand-config

      make
      make DESTDIR=/var/task/graphicsmagick/ install
